<!DOCTYPE html>
<html>
<head>
  <title>RestaurantBookmark</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script src='https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.js'></script>
  <link href='https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.css' rel='stylesheet' />
  <%= csrf_meta_tags %>
</head>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>"><span class="brand-title brown">Restaurant Bookmark</span></a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to "All Restaurants", restaurants_path %></li>
              <li><%= link_to "Favorite Restaurants", favorite_restaurants_path %></li>
            <% end %>
        </ul>
        <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          <strong><%= current_user.first_name %> |</strong>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, class: 'navbar-link'  %> |
          <%= link_to "Sign In", new_user_session_path, class: 'navbar-link'  %>
        <% end %>
      </div>
    </div>
  </nav>

<body class="container">
<%= notice %>
<%= yield %>

</body>
</html>



